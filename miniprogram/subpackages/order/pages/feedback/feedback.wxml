<cu-custom bgColor="bg-gradual-blue" isBack="true">
  <view slot="content">意见反馈</view>
</cu-custom>

<form bindsubmit="onSubmit">
  <view class="cu-card article ">
    <view class="cu-item shadow-warp myorder">
      <view class="title">
        <view>
          当前订单
        </view>
      </view>
      <view class="mycontent">
        <text class="cuIcon-taoxiaopu text-blue" style="font-size: large;"></text>
        {{record.cName}}
        <view wx:for="{{record.record}}" wx:for-item="i">
          <view>
            <view class="text-cut text-bold">{{i.food}}</view>
            <view class="text-bold">￥{{i.price / i.num}}</view>
          </view>
          <view class="text-gray">
            <view>{{i.num}}件</view>
            <view>×{{i.num}}</view>
          </view>
        </view>
      </view>
      <view class="flex my-bottom" style="justify-content: space-between;">
        <view class="cu-tag bg-brown light lg round">{{record.date}}</view>
        <view class="text-bold text-black text-right price">
          总计：<text class="text-red"> ￥{{record.allPrice}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top shadow-warp" style="background-color: white;">
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-people text-gray"></text>
        <text>意见</text>
        <input placeholder="请输入意见" name="feedback" class="text-right fr"></input>
      </view>
    </view>
    <view class="save">
      <button class="bg-gradual-blue round " form-type="submit">
        <text class="cuIcon-upload"> 提交</text>
      </button>
    </view>
  </view>
</form>