/* subpackages/order/pages/record/record.wxss */

.myorder {
  margin-bottom: 5rpx;
  padding: 0 5%;
}

.myorder>.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding: 0 !important;
}

.myorder .mycontent {
  padding: 1rem 5rpx 0 5rpx;
  flex-direction: column;
  border-bottom: 2rpx solid #eee;

}

.myorder .mycontent>view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.myorder .mycontent .info {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  padding-left: 30rpx;
  justify-content: center;
}

.myorder .mycontent .info>view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.myorder .my-bottom {
  display: flex;
  flex-direction: column;
  margin: 15rpx;
}

.myorder .my-bottom>view {
  margin: 15rpx 0;
}

.myorder .my-bottom .info {
  display: flex;
  justify-content: space-between;
}

.myorder .my-bottom .other-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-weight: bold;
}

.feedback {
  background-color: white;
  padding: 0 30rpx;
  margin: 0 30rpx;
}

.feedback .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 15rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.feedback .header > .title {
  font-size: 36rpx;
}

.feedback .header > .title >text {
  font-size: 28rpx;
}

.feedback textarea {
  height: 150rpx;
  margin: 30rpx 30rpx;
}

.feedback .checkbox-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.checkbox-group > checkbox{
  margin-left: 15rpx;
}

.save {
  text-align: center;
  margin: 60rpx;
}

.save>button {
  padding: 35rpx 120rpx !important;
  font-size: larger;
}