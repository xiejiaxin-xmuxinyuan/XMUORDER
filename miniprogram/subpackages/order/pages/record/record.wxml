<cu-custom bgColor="bg-gradual-blue" isBack="true">
    <view slot="content">我的订单</view>
  </cu-custom>

  <view wx:for="{{record}}" wx:key="_id">
    <view class="cu-card article">
      <view style="margin-bottom: 5rpx;" class="cu-item shadow-warp" >
        <view class="title">
          <view class="text-cut">
            订单：#{{index+1}}
          </view>
        </view>
        <view class="content">
          <view class="desc">
            <view class="text-cut" style="width: 100%;">
              总金额：<text class="text-price text-green">{{item.allPrice}}</text>
            </view>
            <view class="text-cut">
              餐品:
              <view wx:for="{{item.record}}" wx:for-item="i" style="margin-left: 65rpx;">
                {{i.food}}   ---   x{{i.num}}   ---   <text class="text-price text-green">{{i.price}}</text>
              </view>
            </view>
            <view class="margin-top-sm">
              <view class="cu-tag bg-brown light lg round">{{item.date}}</view>
              <view class="cu-tag bg-blue light lg round">{{item.cName}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>