image {
  background-color: transparent !important;
}

.no-record {
  margin: 50% 100rpx;
  text-align: center;
  font-size: larger;
}

.no-record>view {
  margin-bottom: 50rpx;
  font-size: 150rpx;
}

.allLoaded {
  margin: 30rpx;
  text-align: center;
}

.myorder {
  margin-bottom: 5rpx;
  padding: 0 5%;
}

.myorder>.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding: 0 !important;
}

.myorder .mycontent {
  padding: 1rem 5rpx 0 5rpx;
  flex-direction: column;
  border-bottom: 2rpx solid #eee;
}

.myorder .mycontent> view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.myorder .mycontent .info {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  padding-left: 30rpx;
  justify-content: center;
}

.myorder .mycontent .info > view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.myorder .my-bottom {
  display: flex;
  flex-direction: column;
  margin: 15rpx;
}

.myorder .my-bottom >view{
  margin: 15rpx 0;
}

.myorder .my-bottom .info {
  display: flex;
  justify-content: space-between;
}

.myorder .my-bottom .other-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-weight: bold;
}

.feedback-group {
  padding: 10rpx 15rpx;
  color: #333;
}

.feedback-group > .content{
  padding: 10rpx 30rpx;
  color: #666;
}