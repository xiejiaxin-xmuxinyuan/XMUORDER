/* subpackages/order/pages/record/record.wxss */

.no-record{
  margin: 50% 100rpx;
  text-align: center;
  font-size: larger;
}

.no-record > view{
  margin-bottom: 50rpx;
  font-size: 150rpx;
}

.myorder {
  margin-bottom: 5rpx;
  padding: 0 5%;
}

.myorder > .title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding: 0 !important;
}

.myorder .mycontent {
  padding: 1rem 5rpx 0 5rpx;
  flex-direction: column;
  border-bottom: 2rpx solid #eee;

}

.myorder .mycontent > view {
  flex-direction: column;
  padding: 30rpx 20rpx;
}

.myorder .mycontent > view > view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.myorder .my-bottom{
  margin-top: 15rpx;
}

.myorder .my-bottom .price{
  margin-right: 15rpx;
}