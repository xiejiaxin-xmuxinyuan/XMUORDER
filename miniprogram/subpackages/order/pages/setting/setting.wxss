.tapImg {
    border: 7rpx solid transparent;
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    background-image: linear-gradient(to right, transparent, transparent), linear-gradient(135deg, #C592E8 10%, #FEE29A 100%);
}

.user-avatar {
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    border: 5rpx solid #fff;
    box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.user-avatar>image {
    width: 200rpx;
    height: 200rpx;
}

.edit-btn {
    position: relative;
}

.edit-btn > button{
    position: absolute;
    bottom: -10rpx;
    left: -30rpx;
    background: none !important;
    font-size: 40rpx;
}

.my-box-content {
    height: 550rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.big-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.big-container image {
    border: 7rpx solid transparent;
    border-radius: 15rpx;
    margin: 5rpx !important;
}