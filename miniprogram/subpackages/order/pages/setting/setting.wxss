.tapImg {
    border: 8rpx rgb(0, 110, 255) solid;
    box-shadow: 0rpx 0rpx 8rpx 0rpx blue;
    border-radius: 10rpx;
}

.user-avatar {
    overflow:hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 250rpx;
    height: 250rpx;
    margin: 40rpx;
    border-radius: 50%;
    border: 5rpx solid #fff;
    box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
  }
  .user-avatar > image{
      width: 250rpx;
      height: 250rpx;
  }

  .big-container {
      display: flex;
      flex-wrap: wrap;
      margin-left: 15rpx;
  }