<!-- 信息页面 -->
<view class="tab-page" bindtouchstart="infoTouchStart" bindtouchend="infoTouchEnd" wx:if="{{pageCurr === 'info'}}">
  <cu-custom bgColor="bg-gradual-blue">
    <view slot="content">信息</view>
  </cu-custom>
  <scroll-view scroll-x class="bg-white nav">
    <view class="flex text-center">
      <view class="cu-item flex-sub {{item===noticeCurrType?'text-orange cur':''}}" wx:for="{{noticeTypes}}"
        wx:key="*this" bindtap="noticeTypeSelect" data-name="{{item}}">
        {{item}}
      </view>
    </view>
  </scroll-view>
  <view wx:for="{{notices}}" wx:key="_id">
    <view class="cu-card article" wx:if="{{item.type == noticeCurrType}}">
      <view style="margin-bottom: 5rpx;" class="cu-item shadow-warp" data-notice="{{item}}" catchtap="showNoticeDetail">
        <view class="title">
          <view class="text-cut">
            <text class="cuIcon-top" wx:if="{{item.top}}"></text>
            {{item.title}}
          </view>
        </view>
        <view class="content">
          <image wx:if="{{ item.coverImg }}" src="{{ item.coverImg }}" mode="aspectFill"></image>
          <view class="desc">
            <view class="text-content" style="width: 100%;">
              {{item.content}}
            </view>
            <view class="margin-top-sm">
              <view class="cu-tag bg-brown light lg round">{{item.date}}</view>
              <view class="cu-tag bg-olive light lg round">{{item.org}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

</view>
<!-- 点餐页面 -->
<view class="tab-page" wx:if="{{pageCurr === 'shop'}}">
  <cu-custom bgColor="bg-gradual-blue">
    <view slot="content">我知盘中餐</view>
  </cu-custom>

  <view class="canteen shadow-warp radius" wx:for="{{canteen}}" wx:key="_id">
    <view class="mycontent" bindtap="toOrder" data-canteen="{{item}}">
      <image src="{{item.thumb}}" mode="aspectFill"
        class="image {{intCurTime > item.intEndTime || intCurTime < item.intBeginTime ? 'img-disable':''}}"></image>
      <view class="info">
        <view wx:if="{{intCurTime > item.intEndTime || intCurTime < item.intBeginTime}}" class="cu-tag bg-grey mytag">打烊
        </view>
        <view wx:elif="{{item.favor >= 50 && item.favor > item.bad}}" class="cu-tag bg-blue mytag">好评</view>
        <view wx:elif="{{item.bad >= 50 && item.favor<item.bad}}" class="cu-tag bg-red mytag">差评</view>

        <view class="text-xl margin-bottom-sm">
          <view class="text-bold text-cut">{{item.name}}</view>
        </view>
        <view>
          <text class="cuIcon-locationfill text-red text-cut">
            <text class="text-black">{{item.fulAddress}}</text>
          </text>
        </view>
        <view>
          <text class="cuIcon-timefill text-olive">
            <text class="text-black"> {{item.beginTime}}-{{item.endTime}}</text>
          </text>
        </view>
        <view class="text-grey">
          <text class="cuIcon-appreciate margin-right-lg text-orange">
            <text class="text-black"> {{item.favor}}</text>
          </text>
          <text class="cuIcon-bad text-black">
            <text> {{item.bad}}</text>
          </text>
        </view>
        <view class="cuIcon-right" style="position: absolute; top: 45%;right: 5rpx;font-size: 40rpx;"></view>
      </view>
    </view>
  </view>
</view>
<!-- 个人中心页面 -->
<view class="tab-page" wx:if="{{pageCurr === 'user'}}">
  <cu-custom bgColor="bg-gradual-blue">
    <view slot="content">个人中心</view>
  </cu-custom>
  <view class="cu-list menu card-menu margin-top shadow-warp">
    <view class="flex justify-center bg-white padding">
      <view class="user-avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-peoplefill text-gray"></text>
        <text>姓名</text>
        <text class="fr">{{name}}</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-phone text-gray"></text>
        <text>电话</text>
        <text class="fr">{{phone}}</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-locationfill text-gray"></text>
        <text>地址</text>
        <text class="fr">{{address}}</text>
      </view>
    </view>
    <view class="cu-item arrow" bindtap="toRecord">
      <view class="content">
        <text class="cuIcon-formfill text-orange"></text>
        <text class="text-orange">我的订单</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content">
        <text class="cuIcon-settingsfill text-olive"></text>
        <text class="text-olive">设置</text>
      </view>
    </view>
    <view class="cu-item arrow" catchtap="toFeedback">
      <view class="content">
        <text class="cuIcon-commentfill text-brown"></text>
        <text class="text-brown">意见反馈</text>
      </view>
    </view>

    <view class="cu-item arrow" bindtap="toAdmin" wx:if="{{identity === 'admin'}}">
      <view class="content">
        <text class="cuIcon-commandfill text-blue"></text>
        <text class="text-blue">管理中心</text>
      </view>
    </view>
  </view>
</view>

