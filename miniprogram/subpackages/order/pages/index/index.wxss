@import "../../../../colorui/animation.wxss";


.user-avatar {
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.user-avatar>image {
  width: 200rpx;
  height: 200rpx;
}

.tab-page {
  min-height: 75vh;
  margin-bottom: 5vh;
}

.footer {
  margin-bottom: 10vh;
}

.canteen {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin: 40rpx 30rpx;
  padding: 30rpx 30rpx;
  border-radius: 5%;
}

.canteen .mycontent {
  display: flex;
  flex-direction: row;
}

.canteen .mycontent .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 0 0;
  margin-right: auto;
  width: 50% !important;
}

.canteen .mycontent .mytag {
  position: absolute;
  width: auto;
  right: 0;
  top: 0;
  z-index: 999;
}

.canteen .mycontent .info>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.canteen .mycontent .info .comment>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:flex-end;
  margin: 0 15rpx;
}

.canteen .mycontent .info .comment>view>view:nth-child(2){
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #666;
}

.canteen .mycontent .image {
  width: 7rem;
  height: 7rem;
  margin-right: 30rpx;
  border-radius: 10%;
  border: 5rpx solid #ddd;
}

.img-disable {
  filter: grayscale(0.7);
}

.page-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: auto;
  padding: 15rpx 50rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 5000rpx;
  border: 5rpx #eee solid;
  width: 75%;
}

.content .my-content {
  font-size: 27rpx;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: center;
  height: 130rpx;
  width: 100%;
  color: #666;
}