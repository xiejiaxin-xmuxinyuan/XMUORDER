.user-avatar {
  overflow: hidden;
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0rpx;
  margin-top: 40rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.user-avatar>image {
  width: 100%;
  height: 100%;
}

.user-avatar>view {
  width: 100%;
  text-align: center;
  margin-top: 40%;
}

.my-form {
  margin: 50rpx;
  padding: 30rpx;
  background-color: #f6f6f6;
  border-radius: 10rpx;
}

.save {
  margin: 60rpx 60rpx;
}

.save > button{
  width: 15rem;
}