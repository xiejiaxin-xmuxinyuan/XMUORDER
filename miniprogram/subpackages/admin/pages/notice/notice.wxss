/* subpackages/admin/pages/notice/notice.wxss */


.tab-page {
  min-height: 75vh;
  margin-bottom: 5vh;
}

.footer {
  margin-bottom: 0;
}

.my-bar {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.my-bar .page-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 50rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border: 5rpx #eee solid;
  border-radius: 5000rpx;
  width: 70%;
}

.my-bar .add-btn {
  margin-left: 30rpx;
  font-size: 45rpx;
  border-radius: 5000rpx;
  background-color: white;
  height: 110rpx;
  width: 110rpx;
	display: inline-flex;
	align-items: center;
	justify-content: center;
  border: 5rpx #eee solid;
  color: orange;
}

.my-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.my-title .text-cut{
	font-size: 30rpx;
	font-weight: 900;
	line-height: 100rpx;
  padding: 0 30rpx;
  color: #333333;
}

.my-title .my-btn{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-right: 15rpx;
}

.my-title .my-btn > button{
  background: none;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 15rpx;
}

page {
  background-color: white;
}

.my-content {
  font-size: 27rpx;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: center;
  height: 130rpx;
  width: 100%;
  color: #666;
}