<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">统计信息</view>
</cu-custom>

<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{item===informCurrType?'text-orange cur':''}}" wx:for="{{informTypes}}" wx:key="*this" bindtap="informTypeSelect" data-name="{{item}}">
      {{item}}
    </view>
  </view>
</scroll-view>
<view class="container" wx:if="{{informCurrType === orderType}}">
  <view class="title">
  </view>
  <canvas canvas-id="orderColumnCanvas" class="canvas"></canvas>
</view>

<view class="container" wx:if="{{informCurrType === orderType}}">
  <canvas canvas-id="orderMonthLineCanvas" disable-scroll="true" class="canvas" bindtouchstart="orderMonthTouchHandler" bindtouchmove="orderMonthMoveHandler" bindtouchend="orderMonthTouchEndHandler"></canvas>
</view>
<view class="container" wx:if="{{informCurrType === orderType}}">
  <canvas canvas-id="orderWeekLineCanvas" disable-scroll="true" class="canvas" bindtouchstart="orderWeekTouchHandler" bindtouchmove="orderWeekMoveHandler" bindtouchend="orderWeekTouchEndHandler"></canvas>
</view>

<view class="container" wx:if="{{informCurrType === feeType}}">
  <view class="title">
  </view>
  <canvas canvas-id="feeColumnCanvas" class="canvas"></canvas>
</view>
<view class="container" wx:if="{{informCurrType === feeType}}">
  <canvas canvas-id="feeMonthLineCanvas" disable-scroll="true" class="canvas" bindtouchstart="feeMonthTouchHandler" bindtouchmove="feeMonthMoveHandler" bindtouchend="feeMonthTouchEndHandler"></canvas>
</view>
<view class="container" wx:if="{{informCurrType === feeType}}">
  <canvas canvas-id="feeWeekLineCanvas" disable-scroll="true" class="canvas" bindtouchstart="feeWeekTouchHandler" bindtouchmove="feeWeekMoveHandler" bindtouchend="feeWeekTouchEndHandler"></canvas>
</view>


<view class="footer">
  <view class="text-grey padding">Copyright © 2021 厦门大学智能点餐项目组</view>
</view>