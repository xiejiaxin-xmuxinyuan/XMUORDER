/* pages/welcome/welcome.wxss */
@import "../../colorui/animation.wxss";


page{
  background-color: white;
}

.user-avatar {
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.user-avatar>image {
  width: 200rpx;
  height: 200rpx;
}

.ico {
  height: 15vh;
  width: 15vh;
  border-radius: 5%;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.tab-page {
  min-height: 75vh; 
  margin-bottom: 5vh;
}

.footer  {
  margin-bottom: 10vh;
}

