@import "../../colorui/animation.wxss";


page{
  background-color: white;
}

.user-avatar {
  overflow: hidden;
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0rpx;
  margin-top: 40rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.ico {
  height: 15vh;
  width: 15vh;
  border-radius: 5%;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

